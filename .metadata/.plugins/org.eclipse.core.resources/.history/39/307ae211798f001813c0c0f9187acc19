package candidatura.questao4;

import java.util.Random;

public class Questao4_2 {

	private static int diasMes(int mes) {
		
		int dias = 31;
		
		if(mes>12 || mes<1){
			System.out.println("Mês inválido");
		}else {
			switch(mes)
			{
			// fevereiro: subtraímos 2 dias aqui e 1 dia no próximo case
			case 2:
				dias-=2;
				System.out.println("Mês com menos de 30 dias");
				break;
				//meses que possuem 30 dias: só subtraímos 1 dia
			case 4: case 6: case 9: case 11:
				dias-=1;
				System.out.println("Mês com 30 dias");
				break;
			default:
				System.out.println("Mês com 31 dias");
			}
		}
		return 0;
	}
	
	protected static int qualDiaMes(int m) {
		
		Random gerador = new Random();

		int mes = gerador.nextInt(12);
		
		return diasMes(mes);
		
	}
	
	public static void main(String[] args) {

		System.out.println(qualDiaMes());

	}

}
